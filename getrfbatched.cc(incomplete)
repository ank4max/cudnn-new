            double beta_real, double beta_imaginary) {
            
  cuDoubleComplex alpha = {alpha_real, alpha_imaginary};
  cuDoubleComplex beta = {beta_real, beta_imaginary};

  GetrfBatched<cuDoubleComplex> ZGetrfBatched(A_row, A_col, B_row, B_col, C_row, C_col, batch_count, alpha, beta, 'Z');
  return ZGetrfBatched.GetrfBatchedApiCall();  
